{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "incremental": true, // 增量编译， 配合 tsBuildInfoFile 一起使用
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "img/*": [
        "src/assets/images/*"
      ]
    },
    "types": [
      "vite/client"
    ],
    "allowImportingTsExtensions": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    ".vitepress/theme/**/*",
    "types/**/*"
  ],
  "exclude": [
    "/node_modules",
    "/docs",
    "/.cache"
  ]
}
