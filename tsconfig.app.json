{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", // /// <reference types="vite/client" />
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "img/*": [
        "src/assets/images/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    ".vitepress/theme/**/*",
    "types/**/*"
  ],
  "exclude": [
    "/node_modules",
    "/docs",
    "/.cache"
  ]
}
